<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/binarybg"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/tv_puntuacion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="P U N T U A C I O N"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_puntaje"
        app:layout_constraintHorizontal_bias="0.418"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_cora" />

    <Button
        android:id="@+id/btn_num2"
        android:layout_width="124dp"
        android:layout_height="144dp"
        android:layout_marginEnd="28dp"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_num1" />

    <ImageView
        android:id="@+id/iv_agentes"
        android:layout_width="64dp"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/background_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/npc" />

    <Button
        android:id="@+id/btn_agente"
        android:layout_width="279dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toEndOf="@+id/iv_agentes"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_multi2"
        android:layout_width="56dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="48dp"
        android:background="@android:color/darker_gray"
        android:text="X"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="35sp"
        app:layout_constraintStart_toEndOf="@+id/btn_num1"
        app:layout_constraintTop_toTopOf="@+id/btn_num1" />

    <Button
        android:id="@+id/btn_cora"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginStart="12dp"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/ib_cora"
        app:layout_constraintTop_toTopOf="@+id/ib_cora" />

    <Button
        android:id="@+id/btn_correcto"
        android:layout_width="73dp"
        android:layout_height="77dp"
        android:layout_marginEnd="28dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ib_correcto" />

    <ImageButton
        android:id="@+id/ib_cora"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:padding="5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_agentes"
        app:srcCompat="@drawable/corazon" />

    <ImageButton
        android:id="@+id/ib_correcto"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_correcto"
        app:layout_constraintTop_toTopOf="@+id/btn_cora"
        app:srcCompat="@drawable/correctas" />

    <Button
        android:id="@+id/btn_num1"
        android:layout_width="124dp"
        android:layout_height="144dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="112dp"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_cora" />

    <EditText
        android:id="@+id/et_res"
        android:layout_width="222dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="?attr/colorButtonNormal"
        android:ems="10"
        android:hint="Tu respuesta"
        android:inputType="phone"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_num1" />

    <Button
        android:id="@+id/btn_enviar"
        android:layout_width="128dp"
        android:layout_height="59dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="28dp"
        android:text="ENVIAR"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_res" />

    <Button
        android:id="@+id/btn_puntaje"
        android:layout_width="179dp"
        android:layout_height="65dp"
        android:layout_marginEnd="24dp"
        android:hint="Puntaje"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="182dp" />

</androidx.constraintlayout.widget.ConstraintLayout>